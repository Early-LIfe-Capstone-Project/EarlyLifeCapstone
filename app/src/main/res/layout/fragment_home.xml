<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.HomeFragment">

    <com.github.mikephil.charting.charts.HorizontalBarChart
        android:id="@+id/usage_report_chart"
        android:layout_width="277dp"
        android:layout_height="325dp"
        android:background="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/sync_quilt_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/sync_quilt_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="144.5dp"
        android:layout_marginLeft="144.5dp"
        android:layout_marginEnd="144.5dp"
        android:layout_marginRight="144.5dp"
        android:layout_marginBottom="88dp"
        android:backgroundTint="?attr/colorSecondary"
        android:text="@string/sync_quilt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>